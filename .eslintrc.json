{
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "consistent-return": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-restricted-imports": ["error", "underscore"],
    "eqeqeq": "error",
    "find-payments": "error",
    "find-fixme": ["error", "fixme", "todo", "hyaa"],
    "func-param": "error",
    "no-unused-vars": "off"
  }
}
